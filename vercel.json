{
  "version": 2,
  "builds": [
    {
      "src": "web/index.html",
      "use": "@vercel/static-build",
      "config": { "distDir": "build/web" }
    }
  ],
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node@3"
    }
  },
  "rewrites": [
    {
      "source": "/api/mpesa-stk-push",
      "destination": "/api/mpesa-stk-push"
    },
    {
      "source": "/api/mpesa-callback",
      "destination": "/api/mpesa-callback"
    }
  ],
  "env": {
    "MPESA_CONSUMER_KEY": "@mpesa-consumer-key",
    "MPESA_CONSUMER_SECRET": "@mpesa-consumer-secret",
    "MPESA_SHORTCODE": "@mpesa-shortcode",
    "MPESA_TILL": "@mpesa-till",
    "MPESA_PASSKEY": "@mpesa-passkey",
    "MPESA_ENV": "production"
  }
}