rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // DEV MODE: Allow all reads and writes for all files
    match /{allPaths=**} {
      allow read, write, delete: if true;
    }

    // Allow users to upload and update their own profile photos
    match /profile_photos/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow admin to read, delete, and download any file in submissions
    match /submissions/{userId}/{allPaths=**} {
      allow read, delete: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
